# GENESIS PROTOCOL - Environment Variables Template
# Copy this to .env and fill in your values

# =============================================================================
# GOOGLE CLOUD
# =============================================================================
GEMINI_API_KEY=your_gemini_api_key_here

# =============================================================================
# PETPOOJA (POS Integration)
# =============================================================================
PP_APP_KEY=your_petpooja_app_key
PP_APP_SECRET=your_petpooja_app_secret
PP_ACCESS_TOKEN=your_petpooja_access_token
PP_MAPPING_CODE=your_mapping_code

# =============================================================================
# GOOGLE DRIVE FOLDERS (Configure in Settings UI or here)
# =============================================================================
FOLDER_ID_EXPENSES=your_expenses_folder_id
FOLDER_ID_PURCHASES=your_purchases_folder_id
FOLDER_ID_INVENTORY=your_inventory_folder_id
FOLDER_ID_RECIPES=your_recipes_folder_id
FOLDER_ID_WASTAGE=your_wastage_folder_id
FOLDER_ID_CASH_OPS=your_cash_ops_folder_id

# Titan Archive/Failed Folders (for folder_watcher.py auto-move)
TITAN_ARCHIVED_EXPENSES=your_archived_expenses_folder_id
TITAN_FAILED_EXPENSES=your_failed_expenses_folder_id
TITAN_ARCHIVED_PURCHASES=your_archived_purchases_folder_id
TITAN_FAILED_PURCHASES=your_failed_purchases_folder_id
TITAN_ARCHIVED_INVENTORY=your_archived_inventory_folder_id
TITAN_FAILED_INVENTORY=your_failed_inventory_folder_id
TITAN_ARCHIVED_RECIPES=your_archived_recipes_folder_id
TITAN_FAILED_RECIPES=your_failed_recipes_folder_id
TITAN_ARCHIVED_WASTAGE=your_archived_wastage_folder_id
TITAN_FAILED_WASTAGE=your_failed_wastage_folder_id

# =============================================================================
# BIGQUERY COST GUARDRAILS
# =============================================================================
BUDGET_MONTHLY_INR=1000
MAX_QUERY_COST_INR=10
DISABLE_BUDGET_BREAKER=false

# =============================================================================
# GENESIS PROTOCOL - CRON SECURITY
# =============================================================================
# Generate: openssl rand -hex 32
CRON_SECRET=your_random_32_byte_hex_string_here

# =============================================================================
# CLOUDFLARE R2 STORAGE (S3-Compatible)
# =============================================================================
R2_ACCOUNT_ID=your_cloudflare_account_id
R2_ACCESS_KEY_ID=your_r2_access_key_id
R2_SECRET_ACCESS_KEY=your_r2_secret_access_key
R2_BUCKET_NAME=titan-erp-files

# =============================================================================
# CURRENCY CONVERSION (for cost calculation)
# =============================================================================
BIGQUERY_USD_PER_TB=5
USD_TO_INR=83
